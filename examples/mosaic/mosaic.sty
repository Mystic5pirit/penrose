
canvas {
  width = 800
  height = 700
}

forall Base x {
    x.icon = Rectangle { 
        center : (0.0, 0.0)
    }
    ensure equal(x.icon.w, x.icon.h)
    encourage equal(x.icon.w * x.icon.h, 100000) 
}

forall Box x {
    x.icon = Rectangle { }
    encourage equal(x.icon.w * x.icon.h, 10000)
}

Box x; Box y {
   ensure disjoint(x.icon, y.icon)
}

Box x; Base y
where In(x, y) {
    ensure contains(y.icon, x.icon)
}
