
canvas {
  width = 800
  height = 700
}

forall Base x {
    x.a = (600.0, 500.0)
    x.b = (200.0, 500.0)
    x.c = (400.0, 200.0)
    x.icon = Polygon {
        points: [x.a, x.b, x.c]
    }
}

forall Box x {
    x.x = ?
    x.y = ?
    x.icon = Polygon {
        points: [ (375.0 + x.x, 450.0 + x.y), (350.0 + x.x, 400.0 + x.y), (400.0 + x.x, 350.0 + x.y), (475.0 + x.x, 400.0 + x.y), (450.0 + x.x, 450.0 + x.y)]
    }

    encourage equal(x.x, 0.0)
    encourage equal(x.y, 0.0)
}

Box x; Box y {
   ensure disjoint(x.icon, y.icon)
}

Box x; Base y
where In(x, y) {
    ensure disjoint(x.icon, y.icon)
}
